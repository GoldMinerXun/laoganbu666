.i-tabs-tab {
  /* flex: 1; */
  display: flex;
  width: 100%;
  -webkit-box-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  flex-direction: column;
  text-align: center;
  position: relative;
}

.i-tabs-tab-bar {
  display: block;
  width: 100%;
  height: 2px;
  background: 0 0;
  position: absolute;
  bottom: 0;
  left: 0;
}

.i-tabs-tab-title {
  font-size: 14px;
  text-align: center;
  box-sizing: border-box;
  padding:  0 10px;
  color: white;
}

.i-tabs-tab-title-current {
  color:red;
}

.i-tabs-tab-scroll {
  display: inline-block;
  width: 60px;
}
