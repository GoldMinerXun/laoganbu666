.me-top-info-wrap {
  position: absolute;
  top: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.me-top-avator {
  width: 180rpx;
  height: 180rpx;
  border-radius: 40%;
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.08);
}

.me-top-avator image {
  width: 90%;
  height: 90%;
  border-radius: 40%;
}

.me-top-name {
  margin-top: 20rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  color: rgba(0, 0, 0, 0.8);
}

.me-top-signature {
  margin-top: 10rpx;
  font-weight: 300;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  line-height: 40rpx;
  background-color: rgba(0, 0, 0, 0);
}
.me-top-signature::after{
  border: none;

}
.me-top-signature image {
  width: 35rpx;
  margin-left: 15rpx;
}

.me-lab {
  height: 120rpx;
  width: 80%;
  margin: 0 auto;
  text-align: center;
  background-color: white;
  border-radius: 100rpx;
  line-height: 150rpx;
  font-size: 36rpx;
  font-weight: 500;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0rpx 10rpx 10rpx rgb(217, 252, 252);
  position: relative;
}

.lab-left {
  width: 50rpx;
  margin-right: 30rpx;
}

.me-btn-wrap {
  margin-top: 50rpx;
}

.btn {
  margin: 0 auto;
  height:150rpx;
  width: 95%;
  background-color: white;
  border: none;
  outline: none;
  box-shadow: 0rpx 1rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 10rpx;
  font-size: 34rpx;
  font-weight: 300;
  position: relative;
  box-sizing: border-box;
  margin-bottom: 35rpx;
}
.btn::after{
  border: none;
}
.img-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  margin-right: 30rpx;
  margin-left: 0rpx;
  position: relative;
}

.img1 {
  width: 60rpx;
  z-index: 100;
  opacity: 0.7;
}

.img2 {
  width: 45rpx;
  margin-left: 4rpx;
  z-index: 100;
  opacity: 0.7;
}

.lab-right {
  height: 38rpx;
  width: 38rpx;
  position: absolute;
  right: 60rpx;
  top: 40rpx;
  opacity: 0.1;
}

.btn-right {
  height: 38rpx;
  width: 38rpx;
  position: absolute;
  right: 20rpx;
  top: 60rpx;
  /* opacity: 0.1; */
}

.circle {
  height: 20rpx;
  width: 20rpx;
  background-color: rgb(23, 173, 254);
  border-radius: 50%;
  z-index: 10;
}

.i1circle {
  position: absolute;
  top: 10rpx;
  left: 20rpx;
}

.i2circle {
  position: absolute;
  bottom: 0rpx;
  left: 20rpx;
}
