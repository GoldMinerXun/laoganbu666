/* pages/notice/index.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: rgb(250, 250, 250);
}
.notice-open-notice{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  padding:18rpx 10rpx;
  margin-bottom: 15rpx;
  background-color: rgba(0, 0, 0, 0.05);
}
.notice-open-text{
  font-size: 30rpx;
  line-height: 35rpx;
  margin-left: 20rpx;
}
.notice-open-btn{
  position: absolute;
  right: 80rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 10rpx 20rpx;
  text-align: center;
  background-color: white;
  border-radius: 15rpx;
  border: 1rpx solid #eee;
  
}
.notice-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* margin-top: 100rpx; */
}

.notice-one {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin: 50rpx auto;
  margin-bottom: 10rpx;
  /* background-color: white; */
  border-radius: 10rpx;
}
.notice-url-wrap{
  /* width:30%; */
  /* margin-bottom: 50rpx; */
}
.notice-two {
  border-radius: 20rpx;
  background-color: white;
  /* height: 130rpx; */
  width: 280rpx;
  line-height: 100rpx;
  padding: 10rpx 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  box-shadow: 0rpx 15rpx 20rpx rgba(0, 0, 0, 0.1);
}

.notice-right{
  width: 100%;
  height: 100%;
  
}



.notice-img{
  width: 60rpx;
  height:60rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  /* margin-left: 30rpx; */
}
.notice-text{
  margin:0 auto;
  /* margin-left: 50rpx; */
  font-size: 34rpx;
  font-weight: bold;
  color: #666;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.notice-img-circle{
  position: absolute;
  top: 10rpx;
  left: -3rpx;
  z-index: 10;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: rgb(2, 209, 253);
}
image{
  height: 90%;
  width: 90%; 
  opacity: 0.8;
  z-index: 100;
}
.notice-num{
  font-weight: 400;
  font-size: 32rpx;
  text-align: center;
  line-height:40rpx;
  color: white;
  width: 40rpx;
  height: 40rpx;
  /* position: absolute; */
  margin-left: 20rpx; 
  background-color: #ff2c2c;
  border-radius: 50%;
}