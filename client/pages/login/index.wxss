/* pages/login/index.wxss */

page {
  width: 100%;
  background-color: rgb(250, 250, 250);
}

.login-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.login-top-wrap {
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-img-wrap {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  border-radius: 50%;
}

.login-img {
  width: 80%;
}

.login-line {
  width: 85%;
  height: 5rpx;
  background-color: rgba(0, 0, 0, 0.1);
  margin: 0 auto;
  border-radius: 100%;
  margin-bottom: 30rpx;
}

.login-info {
  width: 100%;
}

.login-row {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 30rpx;
}

.login-text {
  width: 10%;
  font-size: 35rpx;
  font-weight: 400;
  color: #191970;
}

.login-input {
  width: 70%;
  height: 80rpx;
  background-color: white;
  padding: 10rpx 30rpx;
  font-size: 30rpx;
  font-weight: 300;
  line-height: 80rpx;
  box-sizing: border-box;
  border-radius: 100rpx;
}

.login-btn::after {
  border: none;
}

.login-btn {
  margin-top: 80rpx;
  width: 60%;
  border-radius: 100rpx;
  background: linear-gradient(to right, rgb(0, 183, 240), rgb(0, 221, 251));
  color: white;
  font-weight: 500;
}

.login-warning-wrap {
  display: flex;
  flex-direction: column;
  margin: 10rpx auto;
  margin-bottom: 80rpx;
}

.login-warning-title {
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.login-waring-content {
  font-size: 30rpx;
  font-weight: 300;
  position: relative;
  text-indent: 50rpx;
}

.login-waring-content::before {
  content: "";
  position: absolute;
  left: 10rpx;
  top: 10rpx;
  border-radius: 50%;
  width: 20rpx;
  height: 20rpx;
  background-color: rgba(0, 0, 0, 0.1);
}
