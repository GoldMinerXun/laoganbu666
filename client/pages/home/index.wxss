/* pages/home/index.wxss */

page {
  background-color: rgb(255, 255, 255);
  width: 100%;
}

.home-top-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  position: relative;
}

.home-top-name-wrap {
  z-index: 100;
  width: 80%;
  box-shadow: 0rpx 10rpx 30rpx rgba(0, 0, 0, 0.1);
  margin: 0rpx auto;
  padding: 30rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.home-top-name {
  height: 100rpx;
  font-size: 70rpx;
  font-weight: bold;
  letter-spacing: 10rpx;
  margin-top: 30rpx;
  color: #444;
}

.home-top-describe {
  color: #666;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 3rpx;
  margin-bottom: 30rpx;
}

.home-pic {
  /* height: 300rpx; */
  height: 100%;
  background-size: cover;
  border-radius: 20rpx;
}

.home-panel-wrap {
  margin-top: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.home-panel-hot {
  width: 88%;
  color: #888;
  font-size: 50rpx;
  display: flex;
  flex-direction: row;
}

.home-panel-hot-left-div {
  width: 13rpx;
  height: 60rpx;
  margin-right: 20rpx;
  background-color: rgb(23, 173, 254);
}

.home-panel-hot-text {
  font-size: 40rpx;
  font-weight: 600;
  color: #555;
}

.home-panel-list {
  box-shadow: 0rpx 1rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  height: 340rpx;
  width: 90%;
  display: flex;
  flex: row;
  justify-content: space-around;
  margin: 40rpx 0rpx;
}

.home-panel-intro-wrap {
  display: flex;
  width: 60%;
  flex-direction: column;
  justify-content: space-between;
  /* align-content: space-around; */
}

.home-panel-intro-title {
  font-weight: bold;
  font-size: 38rpx;
  color: #333;
}

.home-panel-intro-detail {
  padding-right: 5rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  font-weight: 400;
  color: #666;
  /* margin-top: 30rpx; */
}

.home-panel-intro-bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  /* margin-top: 20rpx; */
}

.home-panel-qname {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

.home-panel-time {
  font-size: 22rpx;
  color: #888;
  padding-right: 10rpx;
  box-sizing: border-box;
}

.home-panel-hr {
  height: 3rpx;
  width: 100%;
  background-color: #ccc;
  opacity: 0.6;
  margin: 20rpx 0;
}

.home-panel-tags {
  width: 40%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-end;
  /* align-content: right; */
  align-content: center;
}

.home-panel-tagitem {
  text-align: left;
  margin-left: 10rpx;
  /* height: 30rpx; */
  font-size: 18rpx;
  line-height: 25rpx;
  margin-bottom: 20rpx;
  /* border:1rpx solid rgba(0, 0, 0,0.1); */
  background-color: #eee;
  color: #999;
  padding: 10rpx 18rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.home-panel-hotimage-wrap {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  padding-top: 20rpx;
  color: #555;
  font-size: 30rpx;
  
  /* font-size: 20rpx; */
  /* padding-right: 30rpx; */
}

.home-panel-hotimage {
  width: 50rpx;
  opacity: 0.9;
}
