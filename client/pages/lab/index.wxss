.lab-wrap{
  height: 100%;
  width: 100%;
  background: linear-gradient(to bottom,rgb(1, 8, 26), rgb(105, 135, 146),rgb(201,156,133));
}
.lab-line{
  height: 90%;
  width:8rpx;
  background-color: rgba(250, 250,250,0.1);
  position: relative;
  top: 80rpx;
  left: 100rpx;
}

.img{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50rpx;
  left: -50rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  background-color: #04D6FF;
  color: white;
  font-size: 80rpx;
  line-height: 100rpx;
  transition:  all .3s;
}
.img:active{
  background-color:rgba(4, 215,255,0.8);
}
