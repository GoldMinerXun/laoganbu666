/* pages/notice/index.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: rgb(250, 250, 250);
}
.notice-open-notice{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  padding:30rpx 10rpx;
  margin-bottom: 20rpx;
  background-color: rgba(0, 0, 0, 0.05);
}
.notice-open-text{
  font-size: 34rpx;
  line-height: 40rpx;
  margin-left: 20rpx;
}
.notice-open-btn{
  position: absolute;
  right: 80rpx;
  font-size: 34rpx;
  line-height: 50rpx;
  padding: 10rpx 30rpx;
  text-align: center;
  background-color: white;
  border-radius: 15rpx;
  border: 1rpx solid #eee;
  
}
.notice-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* margin-top: 100rpx; */
}

.notice-one {
  width: 90%;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  margin-bottom: 20rpx;
  background-color: white;
  border-radius: 10rpx;
}

.notice-two {
  background-color: white;
  height: 130rpx;
  line-height: 100rpx;
  padding: 10rpx 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.notice-sign{
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right:30rpx;
}
.notice-right{
  width: 100%;
  height: 100%;
  
}
.notice-comment{
  border-radius: 10rpx 10rpx 0rpx 0rpx;
}
.notice-like{
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}
.notice-line {
  width: 90%;
  background-color: #eee;
  height: 0.5rpx;
  margin-left: 10%;
}
.notice-img{
  width: 105rpx;
  height: 105rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.notice-text{
  margin-left: 50rpx;
  font-size: 36rpx;
  font-weight: 500;
}
.notice-comment-img{
  background: linear-gradient(60deg,rgb(106,218,248),rgb(75,161,247));
}
.notice-like-img{
   background: linear-gradient(60deg,rgb(251,244,127),rgb(247,214,80));
}
.notice-publish-problem-img{
   background: linear-gradient(60deg,rgb(238,121,194),rgb(234,71,109));
}
.notice-publish-comment-img{
  background: linear-gradient(60deg,rgb(176,251,224),rgb(111,231,168));
}
image{
  height: 50%;
  width: 50%; 
  opacity: 0.8;
}
