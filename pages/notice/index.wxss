/* pages/notice/index.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: rgb(250, 250, 250);
}
.notice-open-notice{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  padding:18rpx 10rpx;
  margin-bottom: 15rpx;
  background-color: rgba(0, 0, 0, 0.05);
}
.notice-open-text{
  font-size: 30rpx;
  line-height: 35rpx;
  margin-left: 20rpx;
}
.notice-open-btn{
  position: absolute;
  right: 80rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 10rpx 20rpx;
  text-align: center;
  background-color: white;
  border-radius: 15rpx;
  border: 1rpx solid #eee;
  
}
.notice-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* margin-top: 100rpx; */
}

.notice-one {
  width: 90%;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  margin-bottom: 10rpx;
  background-color: white;
  border-radius: 10rpx;
}

.notice-two {
  background-color: white;
  height: 130rpx;
  line-height: 100rpx;
  padding: 10rpx 15rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.notice-sign{
  width: 30rpx;
  height: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  right:30rpx;
}
.notice-right{
  width: 100%;
  height: 100%;
  
}
.notice-comment{
  border-radius: 10rpx 10rpx 0rpx 0rpx;
}
.notice-like{
  border-radius: 0rpx 0rpx 10rpx 10rpx;
}
.notice-line {
  width: 90%;
  background-color: #eee;
  height: 0.5rpx;
  margin-left: 10%;
}
.notice-img{
  width: 60rpx;
  height:60rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-left: 30rpx;
}
.notice-text{
  margin-left: 50rpx;
  font-size: 36rpx;
  font-weight: 500;
}
.notice-img-circle{
  position: absolute;
  top: 10rpx;
  left: -3rpx;
  z-index: 10;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background-color: rgb(2, 209, 253);
}
image{
  height: 90%;
  width: 90%; 
  opacity: 0.8;
  z-index: 100;
}
.notice-num{
  font-size: 32rpx;
  text-align: center;
  line-height:55rpx;
  color: white;
  width: 55rpx;
  height: 55rpx;
  position: absolute;
  right: 100rpx;
  background-color: #ff2c2c;
  border-radius: 50%;
}