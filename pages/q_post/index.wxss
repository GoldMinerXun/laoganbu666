page {
  background-color: #eee;
}

.post-container {
  width: 100%;
  height: 100%;
}

.post-text-wrap {
  width: 96%;
  height: 400rpx;
  margin: 0 auto;
  position: relative;
  padding-top: 30rpx;
  background-color: white;
}

.post-text {
  display: block;
  width: 92%;
  font-size: 32rpx;
  margin: 0 auto;
  box-sizing: border-box;
  overflow: scroll;
}

.post-count {
  width: 130rpx;
  height: 40rpx;
  font-size: 30rpx;
  position: absolute;
  right: 35rpx;
  bottom: 20rpx;
  text-align: center;
}

.post-min {
  width: 96%;
  padding-top: 20rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.post-intro-tips-text {
  padding-left: 30rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  text-align: left;
  color: #888;
}

.post-intro-publish-btn {
  width: 96%;
}

.post-intro-publish-btn button {
  margin-right: 0;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.post-intro-addtag button::after {
  border: none;
}

.post-intro-addtag {
  margin-left: 10rpx;
  flex: 0.8;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.post-intro-tags {
  font-size: 25rpx;
  color: #999;
  background-color: white;
  border-radius: 15rpx;
  padding: 10rpx 20rpx;
}

.post-intro-right-word {
  font-size: 30rpx;
  text-align: center;
  margin-left: 5rpx;
  color: #888;
  display: flex;
  justify-content: center;
  align-items: center;
}

.post-intro-image {
  width: 50rpx;
  height: 50rpx;
  background-size: cover;
}

.post-bottom-wrap {
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
}

.post-bottom-wrap-a {
  width: 150rpx;
  height: 150rpx;
  margin-left: 30rpx;
  border: dashed 1rpx rgba(218, 218, 218, 1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.post-bottom-wrap image {
  width: 100rpx;
  height: 100rpx;
}

.post-picture-pre {
  width: 530rpx;
  height: 150rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: flex-start;
}

.post-picture-pre image {
  width: 150rpx;
  height: 150rpx;
  background-size: cover;
}

.detail-bottom-wrap {
  position: relative;
  box-sizing: border-box;
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
}

.detail-bottom-delete {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  border-radius: 50%;
  right: -20rpx;
  top: -20rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 30rpx;
  color: rgb(135, 135, 135);
  opacity: 1;
  border-top: solid 1rpx rgb(135, 135, 135);
  border-right: solid 1rpx rgb(135, 135, 135);
}

.post-title-input-wrap {
  margin-top: 15rpx;
  width: 100%;
  height: 60rpx;
}

.post-title-input {
  margin: 0 auto;
  width: 96%;
  height: 60rpx;
  font-size: 30rpx;
  background-color: white;
  border-bottom: solid 1rpx whitesmoke;
  box-sizing: border-box;
  text-align: center;
}
