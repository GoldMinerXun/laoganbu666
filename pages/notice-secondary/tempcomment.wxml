<template name="tempcomment">
  <view class='tempcomment-wrap'>
    <view class='tempcommment-avator'>
      <image class='tempcommment-avator-img' src="{{avator}}"></image>
    </view>
    <view class='tempcomment-text-wrap'>
      <view class='tempcomment-name-time'>
        <view class='tempcomment-name'>{{name}}</view>
        <view class='tempcomment-time'>{{time}}</view>
      </view>
      <view class='tempcomment-showcontent'>回复我：{{showcontent}}</view>
      <view class='tempcomment-mycontent'>我的评论:{{mycontent}}</view>
      <view class='tempcomment-line'></view>
    </view>
  </view>
</template>