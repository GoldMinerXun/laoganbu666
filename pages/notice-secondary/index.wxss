/* 我发布的问题模板 */

.tempmyproblem-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
  background-color: white;
}

.tempmyproblem-title {
  font-weight: 600;
  font-size: 35rpx;
  margin-bottom: 20rpx;
}

.tempmyproblem-simplecontent {
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

.tempmyproblem-time {
  box-sizing: border-box;
  font-size: 28rpx;
  color: #aaa;
}
.tempmyproblem-del-wrap{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.tempmyproblem-del-btn {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 40%;
  width: 25%;
  background-color: rgb(242, 242, 242);
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  font-size: 35rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  margin-right:60rpx;
}
.tempmyproblem-del-btn:active {
