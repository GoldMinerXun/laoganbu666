/* pages/notice-secondary/index.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: rgb(250, 250, 250);
}

.notice-secondary-wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* padding: 10rpx 10rpx 10rpx 10rpx; */
}

/* 评论模板样式 */

.tempcomment-wrap {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.tempcommment-avator {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.03);
}

.tempcommment-avator-img {
  width: 90%;
  height: 90%;
  border-radius: 100%;
}

.tempcomment-text-wrap {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  width: 80%;
  margin: 0 auto;
}

.tempcomment-name-time {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.tempcomment-name {
  font-size: 37rpx;
  line-height: 40rpx;
  color: rgb(4, 189, 255);
  font-weight: 400;
}

.tempcomment-time {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999;
}

.tempcomment-showcontent {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.tempcomment-mycontent {
  background-color: rgb(242, 242, 242);
  color: #999;
  font-size: 30rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 13rpx;
  margin-bottom: 30rpx;
}

.tempcomment-line {
  height: 1rpx;
  width: 100%;
  background-color: #eee;
}

