/**index.wxss**/

page {
  height: 100%;
  background-color: rgb(250, 250, 250);
}

.container {
  height: 100%;
  width: 100%;
  padding: 0rpx;
}

.share-head {
  position: sticky;
  top: 0;
  width: 100%;
  height: 120rpx;
  z-index: 100;
  background-color: white;
  box-shadow: 0 2rpx 5rpx #888;
}

.search_btn{
  width: 130rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #DDDDDD;
  border: none;
  font-size: 30rpx;
}
button::after{
  border: none;
}

.share-hr{
  height: 50rpx;
  border-right: solid 2rpx #888;
  margin-left: 30rpx;
}

.search_icon{
  margin-left: 40rpx;
}

.sousuo-wrap{
  width: 94%;
  background-color: #DDDDDD;
  opacity: 0.8;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 15rpx;
  margin: 15rpx auto;
}

.search_input{
  margin-left: 20px;
  height: 80rpx;
  width: 400rpx;
  font-size: 35rpx;
}

.tabnav {
  width: 100%;
}

i-tab-bar {
  width: 100%;
}

.body {
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
}

.body-wrap {
  width: 100%;
}

.body-item {
  width: 90%;
  margin: 0 auto;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
  padding: 20rpx 5rpx;
}

.tag-wrap {
  display: flex;
  flex-direction: row;
}

.tag-item {
  padding: 0 10rpx;
  text-align: center;
  background: linear-gradient(to right, rgba(0, 144, 227,0.5), rgba(26, 209, 233,0.5));
  border-radius: 30rpx;
  margin-right: 10rpx;
  color: white;
  box-shadow: 0 2px 3px #888;
  height: 30rpx;
  font-size: 10px;
}

.card-item {
  margin-bottom: 20rpx;
}
