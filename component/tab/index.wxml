<view class="i-class i-tabs-tab {{ scroll ? 'i-tabs-tab-scroll' : '' }} {{ current ? 'i-tabs-tab-current' : '' }}" >
    <i-badge dot="{{ dot }}" count="{{ dot ? 0 : count }}">
        <view bindtap="handleClickItem" style="background:{{color}}">
            <view class="i-tabs-tab-title {{ current ? 'i-tabs-tab-title-current' : '' }}" wx:if="{{ current && currentColor }}" style="color: {{ currentColor }}" style="background:{{color}}">{{ title }}</view>
            <view class="i-tabs-tab-title {{ current ? 'i-tabs-tab-title-current' : '' }}" style="color:{{fontcolor}}" wx:else>{{ title }}</view>
        </view>
    </i-badge>
    <view class="i-tabs-tab-bar" style="background:{{color}}" wx:if="{{ current }}" style="background: {{ currentColor }}"></view>
</view>